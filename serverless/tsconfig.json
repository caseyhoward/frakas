{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "build",
    "rootDir": "./",
    "strict": true,
    "lib": ["es2015"],
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
